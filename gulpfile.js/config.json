{

  "root": {
    "src": "./src",
    "dest": "./web",
    "base": "."
  },

  "tasks": {

    "webpack": {
      "entries": {
        "main": "./js/app.js"
      },
      "output": {
        "path": "./js"
      }
    },

    "css": {
      "src": "./scss/styles.scss",
      "dest": "./assets/css"
    },

    "sprite": {
      "entry": "./icons/*.svg",
      "fileName": "sprite.svg",
      "spriteDest": "./assets/img",
      "scssDest": "./scss/00_bits/_sprite.scss"
    }

  }

}